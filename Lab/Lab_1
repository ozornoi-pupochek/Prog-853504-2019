#include <stdio.h>
#include <limits.h>

int main()
    {
    int a,i,num=1,num2,step=0;
    printf("Enter your number: ");
    scanf("%d",&a);
    while(num<=a)
    {
        num2=num;
        printf("1");
        i=0;
        while(i<step)
        {
            //num2*=2;
            printf("1");
            i++;
        }
        printf(" %d\n", num);
        num++;
        num*=2;
        num--;
        step++;
    }
    printf("Your number was %d.",a);
    return 0;
}
