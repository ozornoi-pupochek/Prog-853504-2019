#include <stdio.h>
#include <limits.h>

int main()
    {
    int m,i,num=1,step=0;
    printf("Enter your number: ");
    scanf("%d",&m);
    while(num<m)
    {
        printf("1");
        i=0;
        while(i<step)
        {
            printf("1");
            i++;
        }
        printf(" %d\n", num);
        num++;
        num*=2;
        num--;
        step++;
    }
    printf("Your number was %d.",m);
    return 0;
}
